generator client {
  provider = "prisma-client-js"
  previewFeatures = ["fullTextSearch"]
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id        Int      @id @default(autoincrement())
  username  String   @unique
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  Books   UserJoinBook[]
}

model Book {
  id Int @id @default(autoincrement())
  book_url String @unique
  Users UserJoinBook[]
  Tags TagJoinBook[]
}

model UserJoinBook {
  assignedAt DateTime @default(now())
  Rating Int //TODO: put a constraint to limit this by 5
  Review String?

  user User @relation(fields: [userId], references: [id])
  userId Int
  book Book @relation(fields: [bookId], references: [id])
  bookId Int

  @@id([userId, bookId])
}

model Tag {
  id Int @id @default(autoincrement())
  tagsName String
  Books TagJoinBook[]
}

model TagJoinBook {
  user Tag @relation(fields: [tagId], references: [id])
  tagId Int
  book Book @relation(fields: [bookId], references: [id])
  bookId Int

    @@id([tagId, bookId])
}